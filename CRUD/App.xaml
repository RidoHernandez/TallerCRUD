<Application x:Class="CRUD.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CRUD"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="btn" TargetType="Button">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="12"
                        Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="img-banner" TargetType="Image">
            <Setter Property="Width" Value="275"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Panel.ZIndex" Value="10"/>
            <Setter Property="Stretch" Value="UniformToFill"/>
            <Setter Property="Source" Value="Img/img-1.jpg"/>
        </Style>
        <Style x:Key="label" TargetType="Label">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="logo" TargetType="Image">
            <Setter Property="Width" Value="275"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Panel.ZIndex" Value="10"/>
            <Setter Property="Stretch" Value="UniformToFill"/>
            <Setter Property="Source" Value="Img/img-2.jpg"/>
        </Style>
        <Style x:Key="car" TargetType="Image">
            <Setter Property="Width" Value="275"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Panel.ZIndex" Value="10"/>
            <Setter Property="Stretch" Value="UniformToFill"/>
            <Setter Property="Source" Value="Img/img-3.png"/>
        </Style>
        <Style x:Key="label-footter" TargetType="Label">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style x:Key="img-banner2" TargetType="Image">
            <Setter Property="Width" Value="275"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Panel.ZIndex" Value="10"/>
            <Setter Property="Stretch" Value="UniformToFill"/>
            <Setter Property="Source" Value="/Img/img-4.jpg"/>
        </Style>
        
        <!--Refacciones-->
        <!-- ========================= -->
        <!-- IMAGEN BANNER (más compacta) -->
        <!-- ========================= -->
        <Style x:Key="img-banner3" TargetType="Image">
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="75"/>
            <Setter Property="Panel.ZIndex" Value="10"/>
            <Setter Property="Stretch" Value="UniformToFill"/>
            <Setter Property="Source" Value="/Img/banner-2.png"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>


        <!-- ========================= -->
        <!-- PANEL IZQUIERDO (más pequeño y compacto) -->
        <!-- ========================= -->
        <Style x:Key="LeftPanel" TargetType="Border">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="650"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#2B0000" Offset="0"/>
                        <GradientStop Color="#7A0000" Offset="0.6"/>
                        <GradientStop Color="#1E1E1E" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- ========================= -->
        <!-- TEXTOS (más chicos y sin tanto margen) -->
        <!-- ========================= -->
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>

        <Style x:Key="SubTitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#111"/>
            <Setter Property="Margin" Value="5,0,0,10"/>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,3,0,1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>


        <!-- ========================= -->
        <!-- INPUTS (pegaditos y compactos) -->
        <!-- ========================= -->
        <Style x:Key="InputTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#F2F2F2"/>
            <Setter Property="Foreground" Value="#111"/>
            <Setter Property="CaretBrush" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="6"
                        Background="{TemplateBinding Background}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- ========================= -->
        <!-- BOTONES (más pequeños) -->
        <!-- ========================= -->
        <Style x:Key="BtnPrimary" TargetType="Button">
            <Setter Property="Width" Value="85"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#00C853"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BtnWarning" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="#FF9800"/>
        </Style>

        <Style x:Key="BtnDanger" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Background" Value="#D50000"/>
        </Style>

        <Style x:Key="BtnSecondary" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Background" Value="#333"/>
        </Style>

        <Style x:Key="BtnBack" TargetType="Button" BasedOn="{StaticResource BtnPrimary}">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Background" Value="#111"/>
        </Style>
        <Style x:Key="BtnSearch" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#111"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PANEL FILTROS -->
        <Style x:Key="FilterPanel" TargetType="Border">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LabelFilter" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>
        <Style x:Key="FilterTextBox" TargetType="TextBox" BasedOn="{StaticResource InputTextBox}">
            <Setter Property="Background" Value="#EFEFEF"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Width" Value="150"/>
        </Style>


        <!-- ========================= -->
        <!-- TABLA (ajustada a tu pantalla) -->
        <!-- ========================= -->
        <Style x:Key="TableContainer" TargetType="Border">
            <Setter Property="Width" Value="560"/>
            <Setter Property="Height" Value="650"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomDataGrid" TargetType="DataGrid">
            <Setter Property="RowHeight" Value="26"/>
            <Setter Property="Height" Value="500"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#111"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="AlternationCount" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        </Style>
        
        <!--filter panel 2-->
        <!-- PANEL FILTROS -->
        <Style x:Key="FilterPanel-rec" TargetType="Border">
            <Setter Property="Width" Value="600"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LabelFilter-rec" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>
        <Style x:Key="FilterTextBox-rec" TargetType="TextBox" BasedOn="{StaticResource InputTextBox}">
            <Setter Property="Background" Value="#EFEFEF"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Width" Value="150"/>
        </Style>

    </Application.Resources>
</Application>
